@model Houdini.Models.OrderViewModel

@{
    ViewData["Title"] = "OrderCheck";
}
@* show all order to owner via api *@
<div class="row">
    <h1>Orders</h1>
    
    <table class="table">
        <tr>
            <th>Order ID</th>
            <th>Order Email</th>
            <th>Name of Product</th>
            <th>ProductID</th>
            <th>Quantity</th>
        </tr>
        @for(int i =0; i< Model.Orders.Count;i++)
        {
            <tr>
                <td>@Html.DisplayFor(x=>Model.Orders[i].OrderID)</td>
                <td>@Html.DisplayFor(x => Model.Orders[i].Email)</td>
                <td>@Html.DisplayFor(model =>model.Products[Model.Orders[i].ProductID-1].Name)</td>
                <td>@Html.DisplayFor(x => Model.Orders[i].ProductID)</td>
                <td>@Html.DisplayFor(x => Model.Orders[i].Quantity)</td>
            </tr>
        }
    </table>
</div>

